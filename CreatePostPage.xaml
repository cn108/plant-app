<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalYearProject.CreatePostPage"
             Title="CreatePostPage">
    <StackLayout Padding="10">
        <Label Text="New Post" FontSize="24" HorizontalOptions="Center" />

        <!-- Input for the new post -->
        <Editor x:Name="PostEditor" Placeholder="Write your post here..." HeightRequest="100" />

        <!-- Button to submit the post -->
        <Button Text="Submit Post" Clicked="OnSubmitPostClicked" />
    </StackLayout>
</ContentPage>